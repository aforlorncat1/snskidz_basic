<!-- Header -->
    <a name="about"></a>
    <div class="intro-header">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Sns Kidz</h1>
                        <h3>Background image TBD</h3>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->
          <div id="btn-xlarge">SHOP FOR YOUR CHILD NOW
          <br/>
            <button id="btn-inner" class="btn btn-block" data-toggle="collapse" data-target="#search">
                START 
            </button>
          </div>
    </div>

<div id="search" class="panel panel-default panel-collapse collapse">
<form method = "post">
  <div class="container">
    <ul class="nav nav-pills nav-stacked">
      <li><h1>FIND THE SAFEST FIT FOR YOUR CHILD</h1></li>
      <li><h3>Child's Name</h3></li>
      <div class="input-group input-group-lg">
        <input id="searchinput" name="childname" type="text" placeholder="Name" class="form-control">
      </div>

      <li><h3>Birthday</h3></li>
      <div id = "datepicker" class="input-group input-group-lg">

        <input id="dob" name="date" type="text"  placeholder="DD/MM/YYYY" class="form-control" data-provide="datepicker" data-date-end-date="0d" data-date-autoclose = "true">

      </div>

        <li><label for="age">Age
                <input class="form-control" type="text" id="myage" style="width:200px;" />
                        </label>
        </li>

      <li><h3>Weight</h3></li>
      <div class="input-group input-group-lg">
        <input id="searchinput" name="childweight" type="text" placeholder="Weight (in kg)" class="form-control">
      </div>
    
      <%= link_to pages_seat_type_path do %>
     <button id="btn-letsgo" class="btn btn-lg type="submit"">
                LET'S GO
            </button>
            <%end%>
    </ul>
    </form>
  </div>
</div>
    

